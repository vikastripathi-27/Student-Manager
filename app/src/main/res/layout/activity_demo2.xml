<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C9FFFFFF"
    tools:context=".Demo2">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="235dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="35dp"
            android:layout_weight="1"
            android:src="@drawable/timetable_entry" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="235dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="35dp"
            android:layout_weight="1"
            android:src="@drawable/timetable" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Go to Time Table section and enter your weekly timetable subject wise \n\nThe subject name in Timetable section should match with the subject name entered in Subjects section"
            android:textColor="#FFFF"
            android:paddingBottom="18dp"
            android:padding="8dip"
            android:paddingTop="9dp"
            android:textSize="21dp"/>


        <Button
            android:onClick="demo2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:background="@color/colorPrimary"
            android:layout_marginRight="10dp"
            android:paddingBottom="8dp"
            android:drawableRight="@drawable/ic_trending_flat_black_24dp"></Button>

    </LinearLayout>

</RelativeLayout>